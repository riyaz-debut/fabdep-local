{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "first-pv"
  },
  "spec": {
    "storageClassName": "normal",
    "capacity": {
      "storage": "100Gi"
    },
    "accessModes": [
      "ReadWriteMany"
    ],
    "hostPath": {
      "path": "/mnt/worker"
    }
  }
}